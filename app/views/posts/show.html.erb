<p id="notice"><%= notice %></p>
<div class="container">
  <div class="header">
    <h3>
      <%= @post.heading %>
    </h3>
  </div>

  <div class="row">
    <div class="col-md-7" id="post-images">
      <%= image_tag @post.image, class: "thumbnail" %>
    </div>
    <div class="col-md-5">
      <div class="info">
        Price: <%= number_to_currency(@post.price, precision: 0) %><br>
        Last updated <%= "#{time_ago_in_words(@post.updated_at)} ago" %><br>
        Type of housing: <%= @post.housing %><br>
        Bedrooms: <%= @post.beds %><br>
        Reviews: <%= @post.reviews %>
      </div>
    </div>
  </div>
</div>
